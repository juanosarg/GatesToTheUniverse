<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>GU_JuryRiggedFarcasterPortal</defName>
		<label>jury-rigged farcaster portal</label>
		<thingClass>GatesToTheUniverse.Building_JuryRiggedFarcaster</thingClass>
		<description>This contraption is a primitive attempt at reverse engineering the farcaster technology. Hopefully it should link with the derelict network of farcasters around Sigma Alcyon IIb.</description>
		<graphicData>
			<texPath>Things/Building/GU_FarcasterJuryRigged</texPath>
			<graphicClass>Graphic_Single</graphicClass>    
			<drawSize>(6,6)</drawSize>	
			<shaderType>CutoutComplex</shaderType>

		</graphicData>
		<building>
		      <wantsHopperAdjacent>true</wantsHopperAdjacent>

			<trapUnarmedGraphicData>

				<texPath>Things/Building/GU_FarcasterJuryRiggedActivated</texPath>
				<graphicClass>Graphic_Single</graphicClass>    
				<drawSize>(6,6)</drawSize>	
				<shaderType>CutoutComplex</shaderType>
			</trapUnarmedGraphicData>

		</building>
    <drawerType>RealtimeOnly</drawerType>
    <tickerType>Normal</tickerType>
		<costList>
			<Steel>200</Steel>
			<Component>5</Component>
			<GU_ContainedSingularity>1</GU_ContainedSingularity>

		</costList>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-8</Beauty>
		</statBases>
		<size>(6,6)</size>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<blockWind>true</blockWind>    <pathCost>70</pathCost>
		<surfaceType>Item</surfaceType>
		<hasInteractionCell>False</hasInteractionCell>
		<rotatable>false</rotatable>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>



		<comps>
		

			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<designationCategory>GU_GatesToTheUniverseTab</designationCategory>
		<researchPrerequisites><li>GR_BasicFarcasterResearch</li></researchPrerequisites>

	</ThingDef>


	<ThingDef ParentName="BuildingBase">
		<defName>GU_FarcasterPortal</defName>
		<label>farcaster portal</label>
		<thingClass>GatesToTheUniverse.Building_Farcaster</thingClass>
		<description>Using materials found at Sigma Alcyon IIb, this advanced farcaster can be progressively upgraded and fine-tuned to unlock access to other planets. You will just need to find the requirements first!</description>
		<graphicData>
			<texPath>Things/Building/GU_FarcasterDeactivated</texPath>
			<graphicClass>Graphic_Single</graphicClass>    
			<drawSize>(6,6)</drawSize>	
			<shaderType>CutoutComplex</shaderType>

		</graphicData>
		<building>
		      <wantsHopperAdjacent>true</wantsHopperAdjacent>

			<trapUnarmedGraphicData>

				<texPath>Things/Building/GU_FarcasterActivated</texPath>
				<graphicClass>Graphic_Single</graphicClass>    
				<drawSize>(6,6)</drawSize>	
				<shaderType>CutoutComplex</shaderType>
			</trapUnarmedGraphicData>

		</building>
    <drawerType>RealtimeOnly</drawerType>
    <tickerType>Normal</tickerType>
		<costList>
			<Steel>200</Steel>
			<Component>8</Component>
			<GU_RedMineralIngot>20</GU_RedMineralIngot>


		</costList>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-8</Beauty>
		</statBases>
		<size>(6,6)</size>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<blockWind>true</blockWind>    <pathCost>70</pathCost>
		<surfaceType>Item</surfaceType>
		<hasInteractionCell>False</hasInteractionCell>
		<rotatable>false</rotatable>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>



		<comps>

			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>500</basePowerConsumption>
				<startElectricalFires>true</startElectricalFires>
				<shortCircuitInRain>false</shortCircuitInRain>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<designationCategory>GU_GatesToTheUniverseTab</designationCategory>
		<researchPrerequisites><li>GR_AdvancedFarcasterResearch</li></researchPrerequisites>

	</ThingDef>
	
	
	
	<ThingDef ParentName="BuildingBase">
		<defName>GU_AncientFarcasterPortal</defName>
		<label>rusty ancient farcaster portal</label>
		<description>This farcaster portal has been left here, abandoned, for a VERY long time. It appears to still be functional, though. Allows you to return to your homeworld.</description>
		
		<thingClass>GatesToTheUniverse.Building_AncientFarcaster</thingClass>
		<graphicData>
			<texPath>Things/Building/GU_AncientRustedFarcaster</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3,6)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Standable</passability>
		<fillPercent>0.7</fillPercent>
		<canOverlapZones>true</canOverlapZones>
		<tickerType>Normal</tickerType>
		
		<size>(3,6)</size>
		<blockPlants>true</blockPlants>
		
		<building>
		      <wantsHopperAdjacent>true</wantsHopperAdjacent>

			<deconstructible>false</deconstructible>
		</building>
		<destroyable>false</destroyable>
		<useHitPoints>false</useHitPoints>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>

	</ThingDef>





</Defs>